<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bangijan69.myapplication.Registrasi">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:textColor="#e80b63"
            android:fontFamily="sans-serif"
            android:text="REGISTER"/>

        <EditText
            android:id="@+id/etNama_registrasi"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama"
            android:textColorHint="#2f3133"
            android:padding="8dp"
            android:inputType="textPersonName"
             android:textColor="#2f3133"/>

        <EditText
            android:id="@+id/etEmail_registrasi"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColorHint="#2f3133"
            android:padding="8dp"
            android:inputType="textEmailAddress"
            android:textColor="#2f3133"/>

        <EditText
            android:id="@+id/etPassword_registrasi"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColorHint="#2f3133"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColor="#2f3133"/>

        <Button
            android:id="@+id/btnRegister"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:text="REGISTER"
            android:background="#2f3133"
            />
             </LinearLayout>
</RelativeLayout>
